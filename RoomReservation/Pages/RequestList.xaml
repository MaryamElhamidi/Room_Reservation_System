<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoomReservation.Pages.RequestList"
             Title="RequestList">

    <ListView x:Name="RequestsList">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="{Binding Date}" WidthRequest="100"/>
                        <Label Text="{Binding StartTime}" WidthRequest="100"/>
                        <Label Text="{Binding EndTime}" WidthRequest="100"/>
                        <Label Text="{Binding Purpose}" WidthRequest="200"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>