<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoomReservation.Pages.AddRequestPage"
             Title="AddRequestPage">

    <StackLayout Padding="10">
        <Label Text="Room:" />
        <Picker x:Name="RoomPicker" ItemDisplayBinding="{Binding Name}" />
        <Label Text="Start Date:" />
        <DatePicker x:Name="StartDatePicker" />
        <Label Text="End Date:" />
        <DatePicker x:Name="EndDatePicker" />
        <Label Text="Purpose:" />
        <Entry x:Name="PurposeEntry" Placeholder="Purpose of meeting" />
        <Button Text="Submit" Clicked="Submit_Clicked" />
        <Button Text="Cancel" Clicked="Cancel_Clicked" />
    </StackLayout>
</ContentPage>

